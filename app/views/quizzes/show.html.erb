<% @quiz.questions.each do |q|%>
  <%= form_for @quiz, :url => check_answer_path do |f| %>
  <%= f.label q.question %><br />
    <%= f.hidden_field :question_id, :value => q.id %>
    <%= f.radio_button :questions, "#{q.answer1}" %><%=q.answer1%><br />
    <%= f.radio_button :questions, "#{q.answer2}" %><%=q.answer2%><br />
    <%= f.radio_button :questions, "#{q.answer3}" %><%=q.answer3%><br />
    <%= f.radio_button :questions, "#{q.correct4}" %><%=q.correct4%><br />
    <!-- <%= f.submit %>
    <%= f.submit "clear", :type => "reset" %> -->
  <% end %>
<% end %>
<br>
<%= form_for @quiz do |f| %>
<%= f.submit "submit"%>
<% end %>
